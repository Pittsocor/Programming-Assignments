#check how to read and open a file from A20
file = open('alice.txt', 'r')
#create a function to count a specified word
#Keep the general defintion words.
word_to_find = input("What would you like to find? ").casefold()
x = 0

def countWord(file_name, word):
  global x
  for line in file_name:
    if word in line.casefold():
      x += 1
  return x

print ("The word '" + word_to_find + "' appears", countWord(file, word_to_find), "times.")
