import math

class Circle():
	def __init__(self, radius):
		self.radius = radius
	def area(self):
		return float(math.pi * self.radius**2)
	def circ(self):
		return float(2 * math.pi * self.radius)

x = Circle(int(input('What is the radius of the circle?\n')))

print("The area of your circle is: " + str(x.area()))
print("The circumference of your circle is: " + str(x.circ()))
