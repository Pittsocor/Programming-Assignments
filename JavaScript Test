// Question 1. Area and Perimeter
function ellipseArea (r1, r2) {
	return 3.14 * r1 * r2;
}
function ellipsePerimeter (r1, r2) {
	return 2 * 3.14 * Math.sqrt((r1**2 + r2**2)/2);
}

// Question 2. Filtering odd length words
function filterOddLengthWords(arr){
	var new_arr = [];
	for (var i=0;i<arr.length;i++) {
		if (arr[i].length % 2 != 0) {
			new_arr.push(arr[i]);
		}
	}
	return new_arr;
}

// Answers
console.log(ellipseArea(5,10)); // --> 157
console.log(ellipsePerimeter(5,10)); // --> 49.64
var output = filterOddLengthWords(['there', 'it', 'is', 'now']);
console.log(output); // --> ['there', "now']
