print('''Enter your new password:

Must contain:
1. At least eight characters long
2. Has lower case and upper case letters.
3. Has numbers and letters.
''')

password1 = input('New Password:        ')
password2 = input('Enter password again:')

print ()

def match():
	return (password1 == password2)

def hasNumbers(stringInput):
	return any(char.isdigit() for char in stringInput)

def hasUpperLower(stringInput):
	return any(char.isupper() for char in stringInput)

if match() == True and hasNumbers(password1) == True and hasUpperLower(password1) == True:
	print ('Passwords Match!')
elif match() == False:
	print ('Incorrect, passwords don\'t match!')
else: print ('Check Criteria')
