# Create a blank array
array = []
elementNum = int(input("How many elements do you want?: "))

# Now use a for loop to add to the array.
for i in range (0, elementNum):
  array.append(int(input("Enter next number: ")))

print(array)

# Ask user to enter a number to find in the array
print("Enter a number:")
elem2 = int(input("Which number do you want to find? "))

def count():
  countNum = 0
  x = 0
  for i in range(0, elementNum):
    if elem2 == array[i]:
      x += 1
  print("There are %s %s's in the array" % (str(x), str(elem2)))
  
count()
