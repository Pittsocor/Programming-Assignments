message_file = open('alice.txt', 'r')
line_counter = 0
words_to_change = {"Alice":"Bob",
                   "she":"he",
                   "her":"his",
                   "Lewis Carroll":"Aaron Pittser"}
for line in message_file:
  for word in words_to_change:
    line = line.replace(word, words_to_change[word]) #changes every Alice to Bob in the book
  line_counter += 1
  if line_counter % 20 == 0:
    input("Press 'ENTER' to print 20 lines of the book.")
  print(line, end="")
  
message_file.close()
